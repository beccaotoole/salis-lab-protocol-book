body {
    color: #363636;
    font-family: "proxima-nova", "Segoe UI", "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-size: 16px;
    line-height: 1.3;
}

.info {
    font-weight: bold;
    color: green;
}

.error {
    font-weight: bold;
    color: red;
}


h1, h2, h3 {
    border-bottom: 1px solid #ECECEC;
}

.markdown-section {
    line-height: 1.4;
}

.markdown-section h1 {
    font-size: 1.40em;
    border-bottom: 2px solid #ECECEC;
}


.markdown-section h2 {
    font-size: 1.25em;
}

.book-summary ul.summary li.header {
    padding: 10px 15px;
    /* padding-top: 20px; */
    text-transform: uppercase;
    //color: #af176c;
    background-color: #ECECEC;
    font-weight: bold;
}

.markdown-section h3 {
    font-size: 1.10em;
}

.markdown-section h4 {
    font-size: 1em;
}

.markdown-section code {
    color: #c7254e;
    //text-shadow: 0 1px white;
    background-color: #f5f2f0;
    font-family: Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace;
}

.markdown-section pre {
    background: #f5f2f0;
    //text-shadow: 0 1px white;
    font-family: Consolas, Monaco, 'Andale Mono', 'Ubuntu Mono', monospace;
}

.markdown-section pre > code {
    color: inherit;
    //white-space: pre-wrap;

}

.book-summary ul.summary li.active > a {
    //background-color: #ECECEC;
    font-weight: bold;
    //margin-left: 1rem;
    color: #333333;
    background-color: #aaecff;
    border-top: 1px solid #51acc6;
    border-bottom: 1px solid #51acc6;
}

.book-summary ul.summary {

}

.markdown-section blockquote {
    margin: 1em;
    background-color: #f5f2f0;
    border-left: 4px solid #AAAAAA;
    color: inherit;
    text-shadow: 0 1px white;
    border-radius: 3px;
    padding-top: 1em;
    padding-bottom: 0.5em;
}